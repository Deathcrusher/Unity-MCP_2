    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>com.IvanMurzak.UnityMCP.Server</RootNamespace>
    <OutputPath>bin~\$(Configuration)\</OutputPath>
