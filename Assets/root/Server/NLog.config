<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!-- Write logs to a file -->
    <target xsi:type="File" name="file" fileName="logs/server-log.txt" layout="${longdate} | ${level:uppercase=true} | ${message} ${exception:format=toString}" />
  </targets>

  <rules>
    <!-- Log everything from Info level and above to the file -->
    <logger name="*" minlevel="Info" writeTo="file" />
  </rules>
</nlog>